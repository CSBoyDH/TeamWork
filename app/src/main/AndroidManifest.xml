<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="login.comblueant.teamwork" >
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="login.comblueant.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
        <activity
            android:name="login.comblueant.activity.NullClassActivity"
            android:label="asdas" >


        </activity>
        <activity
            android:name="login.comblueant.activity.LoginingActivity"
            android:label="@string/title_activity_logining_acivty" >
        </activity>
        <activity
            android:name="login.comblueant.activity.DetailsPersonalTaskActivity"
            android:label="@string/title_activity_personaltask_details" >
        </activity>
        <activity
            android:name="login.comblueant.activity.DetailsShareActivity"
            android:label="@string/title_activity_share_details" >
        </activity>
        <activity
            android:name="login.comblueant.activity.DetailsProjectActivity"
            android:label="@string/title_activity_project_details" >
        </activity>
        <activity
            android:name="login.comblueant.activity.AddMemberActivity"
            android:label="@string/title_activity_add_member" >

        </activity>
        <activity
            android:name="login.comblueant.activity.DetailsProjectTaskActivity"
            android:label="@string/title_activity_project_task_details" >
        </activity>
        <activity
            android:name="login.comblueant.activity.ProjectTaskAddMemberActivity"
            android:label="@string/title_activity_project_task_addmember" >
        </activity>
        <activity
            android:name="login.comblueant.activity.MainFragmentActivity"
            android:label="@string/title_activity_mainfragment" >

        </activity>
        <activity
            android:name="login.comblueant.activity.TeamManageFragmentActivity"
            android:label="@string/title_activity_team_manage_fragment" >

        </activity>
        <activity
            android:name="login.comblueant.activity.NoticeActivity"
            android:label="@string/title_activity_notice" >

        </activity>
        <receiver android:name="com.blueant.receiver.MyReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MY_BROADCAST"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
