<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="项目名称"
        android:id="@+id/add_project_name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="项目内容"
        android:id="@+id/add_project_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="状态"
        android:id="@+id/add_project_state" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间："/>
        <DatePicker
            android:id="@+id/add_project_start_date"
            android:layout_width="@dimen/datetimepicker_width"
            android:layout_height="@dimen/datetimepicker_height"
            android:layout_gravity="center"
            android:calendarViewShown="false">
        </DatePicker>
        <TimePicker
            android:layout_width="@dimen/datetimepicker_width"
            android:layout_height="@dimen/datetimepicker_height"
            android:layout_gravity="center"
            android:id="@+id/add_project_start_time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间："/>
        <DatePicker
            android:id="@+id/add_project_finish_date"
            android:layout_width="@dimen/datetimepicker_width"
            android:layout_height="@dimen/datetimepicker_height"
            android:layout_gravity="center"
            android:calendarViewShown="false">
        </DatePicker>
        <TimePicker
            android:layout_width="@dimen/datetimepicker_width"
            android:layout_height="@dimen/datetimepicker_height"
            android:layout_gravity="center"
            android:id="@+id/add_project_finish_time"/>
    </LinearLayout>
</LinearLayout>