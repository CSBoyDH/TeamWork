<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="任务名"
        android:id="@+id/add_personaltask_name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="任务内容"
        android:id="@+id/add_personaltask_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间："/>
    <DatePicker
        android:layout_width="@dimen/datetimepicker_width"
        android:layout_height="@dimen/datetimepicker_height"
        android:id="@+id/add_personal_finish_Date"
        android:calendarViewShown="false"/>
    <TimePicker
        android:layout_width="@dimen/datetimepicker_width"
        android:layout_height="@dimen/datetimepicker_height"
        android:id="@+id/add_personal_finish_time" />
</LinearLayout>